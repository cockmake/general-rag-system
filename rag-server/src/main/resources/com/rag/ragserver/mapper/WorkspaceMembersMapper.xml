<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rag.ragserver.mapper.WorkspaceMembersMapper">

    <resultMap id="BaseResultMap" type="com.rag.ragserver.domain.WorkspaceMembers">
            <id property="id" column="id" />
            <result property="workspaceId" column="workspace_id" />
            <result property="userId" column="user_id" />
            <result property="role" column="role" />
            <result property="joinedAt" column="joined_at" />
            <result property="isDeleted" column="is_deleted" />
    </resultMap>

    <sql id="Base_Column_List">
        id,workspace_id,user_id,role,joined_at,is_deleted
    </sql>
    
    <select id="selectMembersWithUserInfo" resultType="com.rag.ragserver.domain.workspace.vo.WorkspaceMemberVO">
        SELECT 
            wm.id,
            wm.user_id AS userId,
            u.username,
            u.email,
            wm.role,
            wm.joined_at AS joinedAt
        FROM workspace_members wm
        INNER JOIN users u ON wm.user_id = u.id AND u.is_deleted = 0
        WHERE wm.workspace_id = #{workspaceId}
          AND wm.is_deleted = 0
        ORDER BY wm.joined_at DESC
    </select>
</mapper>
